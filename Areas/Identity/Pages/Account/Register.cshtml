@page "/Kayit"
@using SakaryaFitnessApp.Areas.Identity.Pages.Account
@model RegisterModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5 col-lg-4">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden animate-hover">
                
                <div class="card-header bg-primary bg-gradient p-4 text-center text-white">
                    <div class="mb-3 bg-white bg-opacity-25 rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 70px; height: 70px;">
                        <i class="bi bi-person-plus-fill fs-1"></i>
                    </div>
                    <h3 class="fw-bold mb-0">Aramıza Katılın</h3>
                    <p class="mb-0 opacity-75 small">Fitness hedeflerinize ilk adımı atın</p>
                </div>
                
                <div class="card-body p-4">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 rounded-3 small mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control rounded-3 bg-light border-0" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="text-muted"><i class="bi bi-envelope-fill me-2"></i>E-posta Adresi</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control rounded-3 bg-light border-0" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="text-muted"><i class="bi bi-lock-fill me-2"></i>Şifre</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.ConfirmPassword" class="form-control rounded-3 bg-light border-0" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword" class="text-muted"><i class="bi bi-check-circle-fill me-2"></i>Şifre Tekrar</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <button id="registerSubmit" type="submit" class="btn btn-primary w-100 btn-lg rounded-pill fw-bold shadow-sm mb-4 transition-all">
                            Hesap Oluştur <i class="bi bi-arrow-right-circle ms-2"></i>
                        </button>

                        <div class="text-center border-top pt-3">
                            <p class="text-muted small mb-1">Zaten bir hesabınız var mı?</p>
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="fw-bold text-primary text-decoration-none d-inline-flex align-items-center hover-underline">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Giriş Yapın
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        .animate-hover { transition: transform 0.3s ease; }
        .animate-hover:hover { transform: translateY(-5px); }
        .hover-underline:hover { text-decoration: underline !important; }
    </style>
}
