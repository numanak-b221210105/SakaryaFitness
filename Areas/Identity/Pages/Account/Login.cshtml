@page "/Giris"
@using SakaryaFitnessApp.Areas.Identity.Pages.Account
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-success text-white">
                <h3 class="text-center mb-0">Giriş Yap</h3>
            </div>
            <div class="card-body">
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="isim@ornek.com" />
                        <label>E-posta Adresi</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="sifre" />
                        <label>Şifre</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    
                    <div class="checkbox mb-3">
                        <label class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            Beni Hatırla
                        </label>
                    </div>
                    
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-success">Giriş Yap</button>
                    </div>
                    <div class="mt-3 text-center">
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Hesabın yok mu? Kayıt ol</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
