@model SakaryaFitnessApp.Models.Service

@{
    ViewData["Title"] = "Silme Onayı";
}

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
        <h1 class="text-danger fw-bold mb-4"><i class="bi bi-exclamation-triangle-fill me-2"></i> Silme Onayı</h1>
        <p class="lead">
            Bu hizmet kaydını **kalıcı olarak silmek** istediğinizden emin misiniz? Bu işlem geri alınamaz.
        </p>
        
        <div class="card shadow-sm rounded-4 border-danger border-2 mb-4">
            <div class="card-body p-4">
                <h4 class="card-title fw-bold">Silinecek Hizmet Detayları:</h4>
                <ul class="list-group list-group-flush mt-3">
                    <li class="list-group-item">
                        <strong>@Html.DisplayNameFor(model => model.Name):</strong> @Html.DisplayFor(model => model.Name)
                    </li>
                    <li class="list-group-item">
                        <strong>@Html.DisplayNameFor(model => model.DurationMinutes):</strong> @Html.DisplayFor(model => model.DurationMinutes) dk
                    </li>
                    <li class="list-group-item">
                        <strong>@Html.DisplayNameFor(model => model.Price):</strong> @Model.Price.ToString("C")
                    </li>
                </ul>
            </div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-action="Index" class="btn btn-secondary btn-lg">İptal Et ve Geri Dön</a>
                <button type="submit" class="btn btn-danger btn-lg"><i class="bi bi-trash me-2"></i> Silmeyi Onayla</button>
            </div>
        </form>
    </div>
</div>