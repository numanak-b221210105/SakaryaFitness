@model SakaryaFitnessApp.Models.Service

@{
    ViewData["Title"] = "Silme Onayı";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            
            <div class="text-center mb-4">
                <div class="text-danger mb-3">
                    <i class="bi bi-exclamation-octagon-fill" style="font-size: 4rem;"></i>
                </div>
                <h2 class="fw-bold text-danger">Silmek İstediğinize Emin misiniz?</h2>
                <p class="text-muted">
                    Aşağıdaki hizmet <strong>kalıcı olarak</strong> veritabanından silinecektir. Bu işlem geri alınamaz.
                    Eğer sadece gizlemek istiyorsanız, "Düzenle" sayfasından hizmeti pasife alabilirsiniz.
                </p>
            </div>

            <div class="card shadow border-0 rounded-4 mb-4 overflow-hidden">
                <div class="row g-0">
                    <div class="col-md-4 position-relative">
                        <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://via.placeholder.com/150" : Model.ImageUrl)" 
                             class="img-fluid h-100 w-100" 
                             style="object-fit: cover; min-height: 150px;" 
                             alt="@Model.Name"
                             onerror="this.src='https://via.placeholder.com/150?text=Resim+Yok';"/>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title fw-bold text-dark">@Model.Name</h5>
                            
                            <p class="card-text text-muted small mb-2">
                                @if (!string.IsNullOrEmpty(Model.Description) && Model.Description.Length > 60)
                                {
                                    @Model.Description.Substring(0, 60)<span>...</span>
                                }
                                else
                                {
                                    @Model.Description
                                }
                            </p>

                            <div class="d-flex gap-2 mb-2">
                                <span class="badge bg-secondary">@Model.DurationMinutes dk</span>
                                <span class="badge bg-success">@Model.Price.ToString("C2")</span>
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-primary">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Pasif</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" class="d-grid gap-2">
                <input type="hidden" asp-for="Id" />
                
                <button type="submit" class="btn btn-danger btn-lg shadow-sm">
                    <i class="bi bi-trash-fill me-2"></i> Evet, Kalıcı Olarak Sil
                </button>
                
                <a asp-action="Index" class="btn btn-light btn-lg border">
                    Hayır, Vazgeç
                </a>
            </form>
            
        </div>
    </div>
</div>