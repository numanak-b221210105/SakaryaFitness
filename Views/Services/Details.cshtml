@model SakaryaFitnessApp.Models.Service

@{
    ViewData["Title"] = Model.Name + " Detayları";
    var isAdmin = User.IsInRole("Admin");
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 overflow-hidden rounded-4">
        <div class="row g-0">
            
            <div class="col-md-5 bg-light position-relative" style="min-height: 400px;">
                <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://via.placeholder.com/500x600?text=Fitness+Hizmeti" : Model.ImageUrl)" 
                     class="img-fluid h-100 w-100" 
                     style="object-fit: cover;" 
                     alt="@Model.Name">
                
                <div class="position-absolute top-0 start-0 m-3">
                    <span class="badge bg-warning text-dark fs-5 shadow">
                        @Model.Price.ToString("C0")
                    </span>
                </div>
            </div>
            
            <div class="col-md-7 p-4 p-lg-5 d-flex flex-column justify-content-center">
                
                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-start">
                        <h1 class="display-5 fw-bold text-dark mb-0">@Model.Name</h1>
                        
                        @if (isAdmin)
                        {
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success ms-2">Yayında</span>
                            }
                            else
                            {
                                <span class="badge bg-danger ms-2">Pasif</span>
                            }
                        }
                    </div>
                    
                    <div class="text-muted mt-2">
                        <i class="bi bi-clock-history text-primary me-1"></i> 
                        <span class="fs-5">@Model.DurationMinutes Dakika</span>
                    </div>
                </div>

                <hr class="my-4 text-muted">

                <div class="mb-4">
                    <h5 class="fw-bold text-secondary">Hizmet Hakkında</h5>
                    <p class="lead text-muted" style="font-size: 1.1rem; line-height: 1.6;">
                        @(string.IsNullOrEmpty(Model.Description) ? "Bu hizmet için henüz detaylı açıklama girilmemiştir." : Model.Description)
                    </p>
                </div>

                <div class="d-flex flex-wrap gap-3 mt-auto">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                        <i class="bi bi-arrow-left me-2"></i> Geri Dön
                    </a>
                    
                    @if (isAdmin)
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg px-4">
                            <i class="bi bi-pencil-square me-2"></i> Düzenle
                        </a>
                    }
                </div>

            </div>
        </div>
    </div>
</div>