@model SakaryaFitnessApp.Models.Service

@{
    ViewData["Title"] = @Model.Name + " Detayları";
    var isAdmin = User.IsInRole("Admin"); // <<< Admin kontrolü ekleniyor
}

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
        <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
            <div class="card-header bg-primary bg-gradient text-white p-4 text-center">
                <h2 class="mb-1 fw-bold">@Model.Name</h2>
                <p class="mb-0">Hizmet Detayları</p>
            </div>
            <div class="card-body p-4 p-md-5 text-center">
                
                <div class="mb-4">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="rounded-circle border border-secondary border-4" 
                            alt="@Model.Name" style="width: 150px; height: 150px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="bg-light text-muted rounded-circle mx-auto d-flex align-items-center justify-content-center border" style="width: 150px; height: 150px;">
                            <i class="bi bi-gear-fill fs-1"></i>
                        </div>
                    }
                </div>

                <div class="text-start">
                    <h4 class="mb-3 fw-bold text-dark"><i class="bi bi-info-circle me-2"></i>Hizmet Bilgileri</h4>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <i class="bi bi-tag-fill me-2 text-primary"></i>
                            <strong>@Html.DisplayNameFor(model => model.Name):</strong> @Html.DisplayFor(model => model.Name)
                        </li>
                        <li class="list-group-item">
                            <i class="bi bi-clock-fill me-2 text-warning"></i>
                            <strong>@Html.DisplayNameFor(model => model.DurationMinutes):</strong> @Html.DisplayFor(model => model.DurationMinutes) dk
                        </li>
                        <li class="list-group-item">
                            <i class="bi bi-currency-dollar me-2 text-success"></i>
                            <strong>@Html.DisplayNameFor(model => model.Price):</strong> @Model.Price.ToString("C")
                        </li>
                    </ul>
                </div>
            </div>
            <div class="card-footer bg-light d-flex justify-content-between p-3">
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left-circle me-1"></i> Listeye Dön</a>
                @if (isAdmin) // <<< SADECE ADMIN İSE GÖRÜNÜR
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="bi bi-pencil-square me-1"></i> Düzenle</a>
                }
            </div>
        </div>
    </div>
</div>