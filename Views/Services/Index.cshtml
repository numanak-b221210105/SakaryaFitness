@model IEnumerable<SakaryaFitnessApp.Models.Service>

@{
    ViewData["Title"] = "Hizmetlerimiz";
    var isAdmin = User.IsInRole("Admin");
}

<style>
    .service-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        border-radius: 15px;
        overflow: hidden;
        background: #fff;
    }
    .service-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.15);
    }
    .card-img-wrapper {
        height: 220px;
        overflow: hidden;
        position: relative;
    }
    .card-img-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }
    .service-card:hover .card-img-wrapper img {
        transform: scale(1.05); /* Resim hafifçe yaklaşır */
    }
    .price-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        background: rgba(255, 193, 7, 0.95); /* Sarı */
        color: #212529;
        padding: 5px 12px;
        border-radius: 20px;
        font-weight: bold;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
    .duration-badge {
        position: absolute;
        bottom: 15px;
        left: 15px;
        background: rgba(0, 0, 0, 0.7);
        color: #fff;
        padding: 4px 10px;
        border-radius: 6px;
        font-size: 0.85rem;
    }
    .status-badge {
        position: absolute;
        top: 15px;
        left: 15px;
    }
</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="display-5 fw-bold text-dark">Hizmetlerimiz</h1>
            <p class="text-muted">Size özel profesyonel antrenman programlarını keşfedin.</p>
        </div>
        
        @if (isAdmin)
        {
            <a asp-action="Create" class="btn btn-primary btn-lg rounded-pill px-4 shadow-sm">
                <i class="bi bi-plus-lg me-2"></i> Yeni Hizmet
            </a>
        }
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-light border shadow-sm text-center p-5 rounded-4">
            <i class="bi bi-calendar-x text-muted" style="font-size: 3rem;"></i>
            <h3 class="mt-3">Henüz Hizmet Eklenmemiş</h3>
            <p class="text-muted">Şu anda listelenecek bir hizmet bulunmuyor.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card service-card h-100 shadow-sm">
                        <div class="card-img-wrapper">
                            <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://via.placeholder.com/400x300?text=Fitness" : item.ImageUrl)" 
                                 alt="@item.Name" 
                                 onerror="this.src='https://via.placeholder.com/400x300?text=Resim+Yok';"/>
                            
                            <div class="price-badge">@item.Price.ToString("C0")</div>
                            <div class="duration-badge"><i class="bi bi-clock-history me-1"></i> @item.DurationMinutes dk</div>
                            
                            @if (isAdmin && !item.IsActive)
                            {
                                <div class="status-badge badge bg-danger">PASİF (GİZLİ)</div>
                            }
                        </div>

                        <div class="card-body d-flex flex-column p-4">
                            <h4 class="card-title fw-bold mb-2">@item.Name</h4>
                            
                            <p class="card-text text-muted flex-grow-1 small">
                                @if (!string.IsNullOrEmpty(item.Description) && item.Description.Length > 90)
                                {
                                    @item.Description.Substring(0, 90)<span>...</span>
                                }
                                else
                                {
                                    @item.Description
                                }
                            </p>

                            <div class="mt-3">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-dark w-100 rounded-pill mb-2">
                                    İncele
                                </a>

                                @if (isAdmin)
                                {
                                    <div class="btn-group w-100" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>