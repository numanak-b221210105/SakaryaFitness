@model SakaryaFitnessApp.Models.Service

@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="text-center mb-4">
                <h1 class="display-6 fw-bold text-primary">Yeni Hizmet Oluştur</h1>
                <p class="text-muted">Spor salonuna yeni bir ders veya paket ekleyin.</p>
            </div>

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" placeholder="Hizmet Adı" />
                            <label asp-for="Name"><i class="bi bi-fonts me-1"></i> Hizmet Adı</label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <textarea asp-for="Description" class="form-control" placeholder="Açıklama" style="height: 150px"></textarea>
                            <label asp-for="Description"><i class="bi bi-card-text me-1"></i> Detaylı Açıklama (Faydaları, Kimler Katılmalı?)</label>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="DurationMinutes" class="form-control" placeholder="Süre" type="number" />
                                    <label asp-for="DurationMinutes"><i class="bi bi-clock me-1"></i> Süre (Dk)</label>
                                    <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Price" class="form-control" placeholder="Fiyat" type="number" />
                                    <label asp-for="Price"><i class="bi bi-tag me-1"></i> Fiyat (₺)</label>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="ImageUrl" class="form-control" placeholder="Resim URL" />
                            <label asp-for="ImageUrl"><i class="bi bi-image me-1"></i> Görsel Bağlantısı (URL)</label>
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            <small class="text-muted d-block mt-2 fst-italic">
                                <i class="bi bi-info-circle"></i> Örn: https://site.com/resim.jpg
                            </small>
                        </div>

                        <div class="form-check form-switch mb-4 p-3 bg-light rounded-3 border">
                            <input class="form-check-input ms-0 me-3" type="checkbox" role="switch" asp-for="IsActive" style="transform: scale(1.3);">
                            <div class="ms-2">
                                <label class="form-check-label fw-bold" asp-for="IsActive">Hizmet Yayında Olsun mu?</label>
                                <div class="form-text text-muted small">İşaretlerseniz hizmet hemen web sitesinde görünür.</div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-light btn-lg px-4 border">İptal</a>
                            <button type="submit" class="btn btn-primary btn-lg px-5 shadow-sm">
                                <i class="bi bi-check-lg me-2"></i> Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}