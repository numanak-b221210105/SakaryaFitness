@model SakaryaFitnessApp.Models.Service

@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<h1 class="display-4 fw-bold mb-4">Yeni Hizmet Ekle</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm rounded-4">
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control" placeholder="Hizmet Adı" />
                        <label asp-for="Name"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="DurationMinutes" class="form-control" placeholder="Süre (dk)" type="number" />
                        <label asp-for="DurationMinutes"></label>
                        <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Price" class="form-control" placeholder="Fiyat (TL)" />
                        <label asp-for="Price"></label>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="ImageUrl" class="form-control" placeholder="Resim URL" />
                        <label asp-for="ImageUrl"></label>
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        <small class="text-muted d-block mt-2">Hizmeti temsil eden bir resim URL'si girin.</small>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg"><i class="bi bi-save me-2"></i> Kaydet</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Listeye Geri Dön</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}