@model IEnumerable<SakaryaFitnessApp.Models.Appointment>

@{
    ViewData["Title"] = "Randevularım";
    // Randevunun sahibi
    var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value; 
    
    // Yetki Kontrolleri
    var isAdmin = User.IsInRole("Admin");
    var isMember = User.IsInRole("Member"); 
}

<h1 class="display-4 fw-bold mb-4">Randevu Listesi</h1>

<div class="mb-4">
    @if (isMember) 
    {
        <a asp-action="Create" class="btn btn-success btn-lg rounded-pill px-4 shadow-sm">
            <i class="bi bi-calendar-plus me-2"></i> Yeni Randevu Al
        </a>
    }
</div>

<div class="card shadow-sm border-0 rounded-4 overflow-hidden">
    <table class="table table-striped table-hover mb-0">
        <thead class="table-dark">
            <tr>
                <th style="width: 25%;">Tarih & Saat</th>
                <th style="width: 25%;">Antrenör</th>
                <th style="width: 20%;">Hizmet</th>
                <th style="width: 15%;">Durum</th>
                <th style="width: 15%;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
        // Admin VEYA randevunun sahibi ise yönetebilir
        var canManage = isAdmin || (item.MemberId == currentUserId);

            <tr>
                <td>
                    <i class="bi bi-clock me-1 text-muted"></i>
                    @item.Date.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
                </td>
                <td>
                    <i class="bi bi-person me-1 text-primary"></i>
                    @Html.DisplayFor(modelItem => item.Trainer.FullName)
                </td>
                <td>@Html.DisplayFor(modelItem => item.Service.Name)</td>
                <td>
                    @{
                        string badgeClass;
                        string textColor = "text-white"; 

                        // Durum Kontrolü ve Renk Ataması
                        switch (item.Status)
                        {
                            case "Tamamlandı":
                                badgeClass = "bg-primary"; // Mavi
                                break;
                            case "Onaylandı":
                                badgeClass = "bg-success"; // Yeşil
                                break;
                            case "Reddedildi":
                                badgeClass = "bg-danger"; // Kırmızı
                                break;
                            default: // Onay Bekliyor
                                badgeClass = "bg-warning"; // Sarı
                                textColor = "text-dark"; // Sarı üzerinde siyah metin
                                break;
                        }
                    }
                    <span class="badge @badgeClass @textColor">@item.Status</span>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Detay</a>
                    
                    @if (canManage)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">İptal Et</a>
                    }
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>