@model IEnumerable<SakaryaFitnessApp.Models.Appointment>

@{
    ViewData["Title"] = "Randevularım";
}

<h1>Randevu Listesi</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Yeni Randevu Al</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Tarih & Saat</th>
            <th>Antrenör</th>
            <th>Hizmet</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Date.ToString("dd.MM.yyyy HH:mm")</td>
            <td>@Html.DisplayFor(modelItem => item.Trainer.FullName)</td>
            <td>@Html.DisplayFor(modelItem => item.Service.Name)</td>
            <td>
                <span class="badge bg-info text-dark">@item.Status</span>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detay</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>