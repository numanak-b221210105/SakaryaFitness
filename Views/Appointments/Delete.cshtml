@model SakaryaFitnessApp.Models.Appointment

@{
    ViewData["Title"] = "Randevu Sil";
}

<h1>Randevu Sil</h1>
<h3>Bu randevuyu silmek istediğinize emin misiniz?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Tarih</dt>
        <dd class = "col-sm-10">@Model.Date.ToString("dd.MM.yyyy HH:mm")</dd>

        <dt class = "col-sm-2">Antrenör</dt>
        <dd class = "col-sm-10">@Model.Trainer?.FullName</dd>

        <dt class = "col-sm-2">Hizmet</dt>
        <dd class = "col-sm-10">@Model.Service?.Name</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
    </form>
</div>