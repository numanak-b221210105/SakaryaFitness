@model SakaryaFitnessApp.Models.Appointment

@{
    ViewData["Title"] = "Randevu Düzenle";
    var isAdmin = User.IsInRole("Admin"); // <<< Admin rolü kontrolü ekleniyor
}

<h1 class="display-4 fw-bold mb-4">Randevu Düzenle</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="MemberId" />
            
            @if (!isAdmin)
            {
                <input type="hidden" asp-for="Status" />
            }

            <div class="form-group mb-3">
                <label class="control-label fw-bold">Tarih ve Saat</label>
                <input asp-for="Date" class="form-control" type="datetime-local" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label fw-bold">Antrenör</label>
                <select asp-for="TrainerId" class="form-control" asp-items="ViewBag.TrainerId"></select>
                <span asp-validation-for="TrainerId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label fw-bold">Hizmet</label>
                <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>
            
            @if (isAdmin) // <<< KRİTİK: SADECE ADMIN İÇİN DURUM (STATUS) ALANI
            {
                <div class="form-group mb-4 p-3 border rounded border-danger">
                    <label asp-for="Status" class="control-label fw-bold text-danger">RAND. DURUMU (Admin Onayı)</label>
                    <select asp-for="Status" class="form-control">
                        <option value="Onay Bekliyor">Onay Bekliyor</option>
                        <option value="Onaylandı">Onaylandı</option>
                        <option value="Reddedildi">Reddedildi</option>
                        <option value="Tamamlandı">Tamamlandı</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            }

            <div class="form-group">
                <input type="submit" value="@(isAdmin ? "Kaydet ve Onayla" : "Güncelle")" class="btn btn-primary btn-lg" />
                <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}