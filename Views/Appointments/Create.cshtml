@model SakaryaFitnessApp.Models.Appointment

@{
    ViewData["Title"] = "Randevu Al";
}

<h1>Yeni Randevu Al</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label class="control-label">Tarih ve Saat</label>
                <input asp-for="Date" class="form-control" type="datetime-local" 
                       min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Antrenör Seçin</label>
                <select asp-for="TrainerId" class="form-control" asp-items="ViewBag.TrainerId"></select>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Hizmet Seçin</label>
                <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Randevu Oluştur" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}