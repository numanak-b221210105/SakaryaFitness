@model SakaryaFitnessApp.Models.Trainer

@{
    ViewData["Title"] = @Model.FullName + " Detayları";
}

<div class="row justify-content-center py-5">
    <div class="col-lg-7 col-md-9">
        <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
            
            <div class="card-header bg-primary bg-gradient text-white p-4 text-center">
                <h2 class="mb-1 fw-bold">@Model.FullName</h2>
                <span class="badge bg-light text-primary rounded-pill px-3 fs-6">@Model.Expertise</span>
            </div>

            <div class="card-body p-4 p-md-5">
                
                <div class="text-center mb-5">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="rounded-circle border border-4 border-white shadow" 
                            alt="@Model.FullName" style="width: 180px; height: 180px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="bg-light text-muted rounded-circle mx-auto d-flex align-items-center justify-content-center border shadow-sm" style="width: 180px; height: 180px;">
                            <i class="bi bi-person-fill display-1"></i>
                        </div>
                    }
                </div>

                <div class="text-start px-md-3">
                    
                    <div class="mb-4">
                        <h5 class="fw-bold text-dark border-bottom pb-2 mb-3">
                            <i class="bi bi-file-text me-2 text-primary"></i> Hakkında
                        </h5>
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <p class="text-muted" style="line-height: 1.8; font-size: 1.05rem;">
                                @Model.Description
                            </p>
                        }
                        else
                        {
                            <div class="alert alert-light text-center fst-italic text-muted border">
                                <i class="bi bi-info-circle me-1"></i> Bu antrenör için henüz biyografi eklenmemiş.
                            </div>
                        }
                    </div>

                    <h5 class="fw-bold text-dark border-bottom pb-2 mb-3">
                        <i class="bi bi-card-list me-2 text-primary"></i> Künye
                    </h5>
                    <ul class="list-group list-group-flush rounded-3">
                        <li class="list-group-item d-flex justify-content-between align-items-center bg-light">
                            <span><i class="bi bi-person-badge me-2 text-primary"></i> <strong>Ad Soyad:</strong></span>
                            <span>@Model.FullName</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center bg-light">
                            <span><i class="bi bi-star-fill me-2 text-warning"></i> <strong>Uzmanlık:</strong></span>
                            <span>@Model.Expertise</span>
                        </li>
                    </ul>

                </div>
            </div>

            <div class="card-footer bg-light d-flex justify-content-between p-4">
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                    <i class="bi bi-arrow-left me-2"></i> Listeye Dön
                </a>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning rounded-pill px-4 text-white">
                        <i class="bi bi-pencil-square me-2"></i> Düzenle
                    </a>
                }
            </div>
        </div>
    </div>
</div>