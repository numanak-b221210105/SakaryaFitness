@model SakaryaFitnessApp.Models.Trainer

@{
    ViewData["Title"] = @Model.FullName + " Detayları";
}

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
        <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
            <div class="card-header bg-primary bg-gradient text-white p-4 text-center">
                <h2 class="mb-1 fw-bold">@Model.FullName</h2>
                <p class="mb-0">@Model.Expertise</p>
            </div>
            <div class="card-body p-4 p-md-5 text-center">
                
                <div class="mb-4">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="rounded-circle border border-secondary border-4" 
                            alt="@Model.FullName" style="width: 200px; height: 200px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="bg-light text-muted rounded-circle mx-auto d-flex align-items-center justify-content-center border" style="width: 200px; height: 200px;">
                            <i class="bi bi-person-fill fs-1"></i>
                        </div>
                    }
                </div>

                <div class="text-start">
                    <h4 class="mb-3 fw-bold text-dark"><i class="bi bi-info-circle me-2"></i>Antrenör Bilgileri</h4>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <i class="bi bi-person-badge me-2 text-primary"></i>
                            <strong>@Html.DisplayNameFor(model => model.FullName):</strong> @Html.DisplayFor(model => model.FullName)
                        </li>
                        <li class="list-group-item">
                            <i class="bi bi-star-fill me-2 text-warning"></i>
                            <strong>@Html.DisplayNameFor(model => model.Expertise):</strong> @Html.DisplayFor(model => model.Expertise)
                        </li>
                    </ul>
                </div>
            </div>
            <div class="card-footer bg-light d-flex justify-content-between p-3">
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left-circle me-1"></i> Listeye Dön</a>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="bi bi-pencil-square me-1"></i> Düzenle</a>
                }
            </div>
        </div>
    </div>
</div>