@model IEnumerable<SakaryaFitnessApp.Models.Trainer>

@{
    ViewData["Title"] = "Antrenör Listemiz";
    var isAdmin = User.IsInRole("Admin");
}

<style>
    .transition-all {
        transition: all 0.3s ease;
    }
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 1rem 3rem rgba(0,0,0,.175)!important;
    }
    /* Metni 2 satırla sınırlayıp ... koyan CSS */
    .text-truncate-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        min-height: 3rem; /* Kartların boyunu eşit tutmak için */
    }
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="display-5 fw-bold text-dark">
            <i class="bi bi-people-fill text-primary me-2"></i>Antrenör Kadromuz
        </h1>
        @if (isAdmin)
        {
            <a asp-action="Create" class="btn btn-success rounded-pill px-4 shadow-sm">
                <i class="bi bi-person-plus-fill me-2"></i> Yeni Ekle
            </a>
        }
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info shadow-sm rounded-4 text-center p-5" role="alert">
            <i class="bi bi-info-circle display-4 d-block mb-3 text-primary"></i>
            <h4 class="alert-heading fw-bold">Henüz Kayıt Yok!</h4>
            <p>Sistemde şu an kayıtlı antrenör bulunmamaktadır.</p>
            @if (isAdmin)
            {
                <a asp-action="Create" class="btn btn-primary mt-2 rounded-pill">İlk Antrenörü Ekle</a>
            }
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 border-0 shadow-lg rounded-4 overflow-hidden hover-shadow transition-all">
                        
                        <div class="card-body p-4 text-center pb-0">
                            <div class="mb-3 position-relative d-inline-block">
                                @if(!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" class="rounded-circle border border-4 border-white shadow-sm" 
                                         alt="@item.FullName" style="width: 140px; height: 140px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="bg-light text-muted rounded-circle mx-auto d-flex align-items-center justify-content-center border shadow-sm" style="width: 140px; height: 140px;">
                                        <i class="bi bi-person-fill display-4"></i>
                                    </div>
                                }
                                <span class="position-absolute bottom-0 start-50 translate-middle-x badge bg-primary border border-2 border-white rounded-pill px-3 shadow-sm">
                                    @item.Expertise
                                </span>
                            </div>

                            <h4 class="card-title fw-bold text-dark mt-3">@item.FullName</h4>
                            
                            <p class="card-text text-muted small mt-2 text-truncate-2">
                                @if (!string.IsNullOrEmpty(item.Description))
                                {
                                    @item.Description
                                }
                                else
                                {
                                    <span class="fst-italic text-secondary opacity-50">Detaylı bilgi eklenmemiş.</span>
                                }
                            </p>
                        </div>

                        <div class="card-footer bg-white border-0 p-4 pt-0">
                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary rounded-pill">
                                    Detayları Gör
                                </a>
                                
                                @if (isAdmin)
                                {
                                    <div class="row g-2">
                                        <div class="col-6">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning w-100 rounded-pill btn-sm text-dark fw-bold">
                                                <i class="bi bi-pencil"></i> Düzenle
                                            </a>
                                        </div>
                                        <div class="col-6">
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger w-100 rounded-pill btn-sm">
                                                <i class="bi bi-trash"></i> Sil
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>