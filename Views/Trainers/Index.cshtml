@model IEnumerable<SakaryaFitnessApp.Models.Trainer>

@{
    ViewData["Title"] = "Antrenörler";
}

<h1>Antrenör Listesi</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Yeni Antrenör Ekle</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Fotoğraf</th>
            <th>Ad Soyad</th>
            <th>Uzmanlık</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if(!string.IsNullOrEmpty(item.ImageUrl))
                {
                    <img src="@item.ImageUrl" width="80" height="80" style="object-fit:cover; border-radius:50%;" />
                }
                else
                {
                    <span>Resim Yok</span>
                }
            </td>
            <td>@Html.DisplayFor(modelItem => item.FullName)</td>
            <td>@Html.DisplayFor(modelItem => item.Expertise)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detay</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
