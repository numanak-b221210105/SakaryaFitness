@model SakaryaFitnessApp.Models.Trainer

@{
    ViewData["Title"] = "Yeni Antrenör Ekle";
}

<h1 class="display-4 fw-bold mb-4 text-center text-primary">Yeni Antrenör Ekle</h1>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-primary text-white p-3 rounded-top-4">
                <h5 class="mb-0 text-center"><i class="bi bi-person-plus-fill me-2"></i>Antrenör Bilgileri</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="FullName" class="form-control" placeholder="Ad Soyad" />
                        <label asp-for="FullName"><i class="bi bi-person me-1"></i> Ad Soyad</label>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Expertise" class="form-control" placeholder="Örn: Fitness, Yoga" />
                        <label asp-for="Expertise"><i class="bi bi-star me-1"></i> Uzmanlık Alanı</label>
                        <span asp-validation-for="Expertise" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="ImageUrl" class="form-control" placeholder="Örn: http://..." />
                        <label asp-for="ImageUrl"><i class="bi bi-link-45deg me-1"></i> Fotoğraf URL</label>
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <textarea asp-for="Description" class="form-control" placeholder="Antrenör hakkında bilgi..." style="height: 150px"></textarea>
                        <label asp-for="Description"><i class="bi bi-card-text me-1"></i> Hakkında / Biyografi</label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <small class="text-muted ms-1 fst-italic">Antrenörün tecrübesi ve sertifikaları hakkında kısa bilgi giriniz.</small>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm">
                            <i class="bi bi-save2 me-2"></i> Kaydet
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">
                            <i class="bi bi-arrow-left me-2"></i> Listeye Geri Dön
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}